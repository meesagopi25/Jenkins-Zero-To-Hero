pipeline {
    agent {
        docker {
            image 'docker:26.1.0-cli'
            args '-u root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        IMAGE_NAME    = "mgopi1982/python-demo-app"
        DOCKER_CONFIG = "${WORKSPACE}/.docker"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Push Docker Image') {
            environment {
                DOCKER_IMAGE = "${IMAGE_NAME}:${BUILD_NUMBER}"
                REGISTRY_CREDENTIALS = credentials('docker-cred')
            }
            steps {
                script {
                    sh '''
                        mkdir -p ${DOCKER_CONFIG}
                        cd cicd
                        docker build -t ${DOCKER_IMAGE} .
                    '''

                    def dockerImage = docker.image("${DOCKER_IMAGE}")
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Update Deployment File') {
            environment {
                GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
                GIT_USER_NAME = "meesagopi25"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        # Install git
                        apk add --no-cache git

                        # Crucial: Navigate to the folder containing your code and .git context
                        # Based on your screenshot, your files are in the 'cicd' directory
                        cd cicd

                        # Mark the directory as safe for Git
                        git config --global --add safe.directory ${WORKSPACE}/cicd

                        # Configure Git Identity
                        git config user.email "meesala.gopi@gmail.com"
                        git config user.name "Gopi Meesala"

                        # Update the image tag in deployment.yml
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" kind-manifest/deployment.yml

                        # Commit and Push changes
                        git add kind-manifest/deployment.yml
                        git commit -m "Update deployment image to version ${BUILD_NUMBER} [skip ci]"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
                    '''
                }
            }
        }
    }

    post {
        cleanup {
            sh 'docker logout || true'
        }
    }
}
